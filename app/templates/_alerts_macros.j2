{# Categories: success (green), primary (blue), warning (yellow), danger (red) #}

{% macro alert(class="") %}
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            {% for category, message in messages %}
                {{raw_alert(message, category, class)}}
            {% endfor %}
        {% endif %}
    {% endwith %}
{% endmacro %}

{% macro raw_alert(text, category, class="") %}
    <div class="alert alert-{{ category }} alert-dismissible {{ class }}" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ text }}
    </div>
{% endmacro %}